{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "install-then-build-nodejs",
            "type": "npm",
            "options": {
                "cwd": "${workspaceFolder}/frontend/code"
            },
            "script": "install-then-build",
        },
        {
            "label": "build-netcore",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/service/code/contoso-names-service.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/service/code/contoso-names-service.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/service/code/contoso-names-service.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}